# Korean Prompt Engineer - Environment Configuration Template
# 이 파일은 개발자들이 .env 파일을 생성할 때 사용하는 템플릿입니다.
# .env 파일을 생성 후 필요한 API 키와 설정 값을 입력해주세요.

# LLM API Keys
# OpenAI API Key and Model Name
OPENAI_API_KEY=
OPENAI_MODEL_NAME=gpt-4o # 예: gpt-4o, gpt-3.5-turbo

# Anthropic Claude API Key and Model Name
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL_NAME=claude-3-5-sonnet-20241022 # 예: claude-3-opus-20240229, claude-3-sonnet-20240229

# Google Gemini API Key and Model Name
GEMINI_API_KEY=
GEMINI_MODEL_NAME=gemini-1.5-flash # 예: gemini-1.5-pro, gemini-1.5-flash

# Ollama Configuration
# Ollama Base URL
OLLAMA_BASE_URL=http://localhost:11434

# Ollama Model Name
OLLAMA_MODEL_NAME=deepseek-r1:32b # 예: llama3, deepseek-coder-v2

# Development Settings
# 디버그 모드 활성화 여부
DEBUG=False

# 로그 레벨 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Cache Settings
# 캐시 사용 여부
CACHE_ENABLED=True

# 캐시 만료 기간 (일 단위)
CACHE_TTL_DAYS=7
